<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<package name="core" namespace="/" extends="root">

		<action name="index" class="fr.simpleblog.controllers.RootAction"
			method="initApplication">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success" type="tiles">rootTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="enregistrer">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success" type="tiles">signupTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="ajouter" class="fr.simpleblog.controllers.UtilisateurAction"
			method="ajouterUtilisateur">
			<!-- changement de pile d'interception fichier struts-default.xml situÃ© 
				dans la lib struts2-core -->
			<!-- <interceptor-ref name="paramsPrepareParamsStack"></interceptor-ref> -->
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success" type="tiles">registeredTemplate</result>
			<result name="input" type="tiles">signupTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="connexion" class="fr.simpleblog.controllers.UtilisateurAction"
			method="connecterUtilisateur">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<!-- redirection pour ne pas tester la connexion plusieurs fois -->
			<result name="success" type="redirectAction">connecte</result>
			<result name="input" type="tiles">rootTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="connecte">
			<result name="success" type="tiles">rootTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="deconnexion" class="fr.simpleblog.controllers.UtilisateurAction"
			method="deconnecterUtilisateur">
			<result name="success" type="tiles">rootTemplate</result>
		</action>

	</package>

	<package name="admin" namespace="/backOffice" extends="root">

		<action name="accesbackoffice" class="fr.simpleblog.controllers.UtilisateurAction"
			method="utilisateurAutorite">
			<result name="success" type="tiles">backofficeTemplate</result>
			<result name="input" type="tiles">backofficeTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="modifier" class="fr.simpleblog.controllers.FicheUtilisateurAction"
			method="lireFicheUtilisateur">
			<result name="success" type="tiles">modifTemplate</result>
		</action>
		
		<action name="validermodification" class="fr.simpleblog.controllers.FicheUtilisateurAction">
			<result name="success" type="tiles">modifTemplate</result>
		</action>

	</package>

</struts>
