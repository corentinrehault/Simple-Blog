<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<package name="core" namespace="/" extends="root">

		<action name="index" class="fr.Simple_Blog.controllers.RootController"
			method="initApplication">
			<result name="success" type="tiles">rootTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="enregistrer">
			<result name="success" type="tiles">signupTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="ajouterUtilisateur" class="fr.Simple_Blog.controllers.RootController"
			method="ajouterUtilisateur">
			<!-- changement de pile d'interception fichier struts-default.xml situÃ© 
				dans la lib struts2-core -->
			<!-- <interceptor-ref name="paramsPrepareParamsStack"></interceptor-ref> -->
			<result name="success" type="tiles">registeredTemplate</result>
			<result name="input" type="tiles">signupTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

		<action name="connexion" class="fr.Simple_Blog.controllers.RootController"
			method="connexionUtilisateur">
			<result name="success" type="tiles">signinTemplate</result>
			<result name="input" type="tiles">rootTemplate</result>
			<result name="error" type="dispatcher">error.jsp</result>
		</action>

	</package>

	<package name="admin" namespace="/backOffice" extends="root">

		<action name="adminConsole" class="fr.Simple_Blog.controllers.RootController"
			method="initApplication2">
			<result name="success" type="tiles">adminTemplate</result>
		</action>

	</package>

</struts>
